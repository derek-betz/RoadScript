{
  "metadata": {
    "version": "2024.1",
    "authority": "Indiana Design Manual (IDM)",
    "last_updated": "2024-01-01",
    "description": "IDM-compliant standards for roadway design calculations",
    "legal_notice": "These standards are derived from the Indiana Design Manual and are maintained for legal defensibility and Standard of Care compliance."
  },
  "buffer_strips": {
    "description": "Buffer strip width requirements based on road classification and design speed",
    "units": "feet",
    "standards": {
      "interstate": {
        "min_width": 30,
        "max_width": 50,
        "design_speeds": {
          "55": 30,
          "60": 35,
          "65": 40,
          "70": 45,
          "75": 50
        },
        "notes": "Interstate highways require wider buffer strips for safety"
      },
      "us_route": {
        "min_width": 20,
        "max_width": 40,
        "design_speeds": {
          "45": 20,
          "50": 25,
          "55": 30,
          "60": 35,
          "65": 40
        },
        "notes": "US Routes with high traffic volumes"
      },
      "state_highway": {
        "min_width": 15,
        "max_width": 35,
        "design_speeds": {
          "35": 15,
          "40": 20,
          "45": 25,
          "50": 30,
          "55": 35
        },
        "notes": "State highways and primary arterials"
      },
      "local_road": {
        "min_width": 10,
        "max_width": 25,
        "design_speeds": {
          "25": 10,
          "30": 12,
          "35": 15,
          "40": 20,
          "45": 25
        },
        "notes": "Local roads and low-volume collectors"
      }
    },
    "adjustment_factors": {
      "terrain": {
        "flat": 1.0,
        "rolling": 1.15,
        "mountainous": 1.3
      },
      "traffic_volume": {
        "low": 0.9,
        "medium": 1.0,
        "high": 1.1
      }
    }
  },
  "clear_zones": {
    "description": "Clear zone width requirements for roadside safety",
    "units": "feet",
    "reference": "AASHTO Roadside Design Guide and IDM Chapter 5",
    "standards": {
      "design_speed_based": {
        "30": {
          "fill_slope_6_1_or_flatter": {"0-500": 7, "501-1500": 10, "1501-6000": 12, "6000+": 14},
          "fill_slope_5_1_to_4_1": {"0-500": 7, "501-1500": 10, "1501-6000": 12, "6000+": 14},
          "fill_slope_3_1_or_steeper": {"0-500": 7, "501-1500": 10, "1501-6000": 12, "6000+": 14}
        },
        "40": {
          "fill_slope_6_1_or_flatter": {"0-500": 10, "501-1500": 12, "1501-6000": 14, "6000+": 16},
          "fill_slope_5_1_to_4_1": {"0-500": 10, "501-1500": 12, "1501-6000": 14, "6000+": 16},
          "fill_slope_3_1_or_steeper": {"0-500": 10, "501-1500": 12, "1501-6000": 14, "6000+": 16}
        },
        "50": {
          "fill_slope_6_1_or_flatter": {"0-500": 12, "501-1500": 16, "1501-6000": 20, "6000+": 24},
          "fill_slope_5_1_to_4_1": {"0-500": 12, "501-1500": 16, "1501-6000": 20, "6000+": 26},
          "fill_slope_3_1_or_steeper": {"0-500": 12, "501-1500": 16, "1501-6000": 22, "6000+": 28}
        },
        "60": {
          "fill_slope_6_1_or_flatter": {"0-500": 16, "501-1500": 20, "1501-6000": 26, "6000+": 32},
          "fill_slope_5_1_to_4_1": {"0-500": 16, "501-1500": 22, "1501-6000": 28, "6000+": 34},
          "fill_slope_3_1_or_steeper": {"0-500": 18, "501-1500": 24, "1501-6000": 30, "6000+": 36}
        },
        "70": {
          "fill_slope_6_1_or_flatter": {"0-500": 20, "501-1500": 26, "1501-6000": 32, "6000+": 40},
          "fill_slope_5_1_to_4_1": {"0-500": 22, "501-1500": 28, "1501-6000": 34, "6000+": 42},
          "fill_slope_3_1_or_steeper": {"0-500": 24, "501-1500": 30, "1501-6000": 38, "6000+": 46}
        }
      }
    },
    "traffic_volume_ranges": {
      "0-500": "ADT 0-500 vehicles per day",
      "501-1500": "ADT 501-1500 vehicles per day",
      "1501-6000": "ADT 1501-6000 vehicles per day",
      "6000+": "ADT over 6000 vehicles per day"
    },
    "slope_categories": {
      "fill_slope_6_1_or_flatter": "6:1 or flatter (recoverable)",
      "fill_slope_5_1_to_4_1": "5:1 to 4:1 (recoverable with care)",
      "fill_slope_3_1_or_steeper": "3:1 or steeper (non-recoverable)"
    }
  },
  "geometry": {
    "description": "Geometric design standards for horizontal and vertical alignment",
    "horizontal_curves": {
      "minimum_radius": {
        "units": "feet",
        "superelevation_max": 0.06,
        "friction_factor": {
          "30": 0.17,
          "40": 0.16,
          "50": 0.15,
          "60": 0.14,
          "70": 0.12,
          "80": 0.11
        },
        "design_speed_radius": {
          "30": 200,
          "40": 360,
          "50": 570,
          "60": 830,
          "70": 1150,
          "80": 1570
        }
      },
      "superelevation_transition": {
        "description": "Length of superelevation runoff",
        "formula": "L = (w * e_max * V) / 180",
        "where": {
          "L": "transition length in feet",
          "w": "width of rotation (feet)",
          "e_max": "maximum superelevation rate",
          "V": "design speed (mph)"
        }
      }
    },
    "vertical_curves": {
      "minimum_length": {
        "description": "Minimum vertical curve length for sight distance",
        "units": "feet",
        "crest_curves": {
          "K_values": {
            "30": 19,
            "40": 44,
            "50": 84,
            "60": 151,
            "70": 247,
            "80": 384
          },
          "formula": "L = K * A",
          "where": {
            "L": "curve length in feet",
            "K": "rate of vertical curvature",
            "A": "algebraic difference in grades (percent)"
          }
        },
        "sag_curves": {
          "K_values": {
            "30": 37,
            "40": 64,
            "50": 96,
            "60": 136,
            "70": 181,
            "80": 231
          }
        }
      },
      "stopping_sight_distance": {
        "units": "feet",
        "design_speed_ssd": {
          "30": 200,
          "40": 305,
          "50": 425,
          "60": 570,
          "70": 730,
          "80": 910
        }
      }
    },
    "cross_slope": {
      "description": "Pavement cross slope for drainage",
      "units": "percent",
      "standards": {
        "normal_crown": {
          "concrete": 0.02,
          "asphalt": 0.02
        },
        "superelevated": {
          "min": 0.02,
          "max": 0.06
        }
      }
    }
  },
  "validation_rules": {
    "buffer_strips": {
      "required_fields": ["road_classification", "design_speed", "terrain"],
      "valid_classifications": ["interstate", "us_route", "state_highway", "local_road"],
      "valid_terrains": ["flat", "rolling", "mountainous"],
      "design_speed_range": [25, 80]
    },
    "clear_zones": {
      "required_fields": ["design_speed", "adt", "slope_category"],
      "design_speed_range": [30, 70],
      "valid_slope_categories": ["fill_slope_6_1_or_flatter", "fill_slope_5_1_to_4_1", "fill_slope_3_1_or_steeper"]
    },
    "geometry": {
      "required_fields": ["design_speed"],
      "design_speed_range": [30, 80],
      "grade_range": [-12, 12]
    }
  }
}
